---
import ThemeToggle from '@/components/react/theme-toggle';
const { active } = Astro.props;
---

<!-- Horizontal Top Navigation -->
<nav class="fixed top-0 left-0 right-0 backdrop-blur-md bg-white/95 dark:bg-zinc-900/95 border-b border-gray-200 dark:border-zinc-800 z-[100] shadow-lg">
  <div class="flex items-center justify-between gap-3 sm:gap-4 px-3 sm:px-6 py-2 sm:py-3 w-full">
    <div class="flex items-center gap-3 sm:gap-4 min-w-0 overflow-hidden" style="max-width: calc(100% - 60px);">
      <!-- Logo and Brand -->
      <div class="flex items-center gap-2 sm:gap-3 flex-shrink-0">
        <img class="h-6 sm:h-8 w-auto flex-shrink-0" src="{{base_path | safe}}/assets/favicon.svg" alt="OPM">
        <span class="text-lg sm:text-xl font-bold text-gray-900 dark:text-zinc-100 flex-shrink-0">OPM</span>
      </div>
      
      <!-- Horizontal Menu Items -->
      <div id="navbar-scroll-container" class="flex items-center gap-1 sm:gap-2 overflow-x-auto rounded-lg mobile-navbar-scroll flex-1 min-w-0">
        <a 
          href="{{base_path | safe}}/" 
          aria-label="Process List"
          class={`${active == "list" ? 'bg-sky-600/20 text-sky-600 dark:text-sky-300' : 'hover:bg-gray-100 dark:hover:bg-zinc-800/50 text-gray-600 dark:text-zinc-400 hover:text-gray-900 dark:hover:text-zinc-100'} flex items-center px-2 sm:px-4 py-2 text-xs sm:text-sm font-medium transition-all duration-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-sky-500 focus:ring-inset active:scale-95`}>
          <svg class="mr-1 sm:mr-2 h-4 sm:h-5 w-4 sm:w-5 flex-shrink-0" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 10h16M4 14h16M4 18h16" />
          </svg>
          <span class="hidden sm:inline">Process List</span>
          <span class="inline sm:hidden" aria-hidden="true">List</span>
        </a>
        
        <a 
          href="{{base_path | safe}}/servers" 
          aria-label="Agents"
          class={`${active == "servers" ? 'bg-sky-600/20 text-sky-600 dark:text-sky-300' : 'hover:bg-gray-100 dark:hover:bg-zinc-800/50 text-gray-600 dark:text-zinc-400 hover:text-gray-900 dark:hover:text-zinc-100'} flex items-center px-2 sm:px-4 py-2 text-xs sm:text-sm font-medium transition-all duration-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-sky-500 focus:ring-inset active:scale-95`}>
          <svg class="mr-1 sm:mr-2 h-4 sm:h-5 w-4 sm:w-5 flex-shrink-0" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 12h14M5 12a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v4a2 2 0 01-2 2M5 12a2 2 0 00-2 2v4a2 2 0 002 2h14a2 2 0 002-2v-4a2 2 0 00-2-2m-2-4h.01M17 16h.01" />
          </svg>
          Agents
        </a>
        
        <a 
          href="{{base_path | safe}}/system" 
          aria-label="System"
          class={`${active == "system" ? 'bg-sky-600/20 text-sky-600 dark:text-sky-300' : 'hover:bg-gray-100 dark:hover:bg-zinc-800/50 text-gray-600 dark:text-zinc-400 hover:text-gray-900 dark:hover:text-zinc-100'} flex items-center px-2 sm:px-4 py-2 text-xs sm:text-sm font-medium transition-all duration-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-sky-500 focus:ring-inset active:scale-95`}>
          <svg class="mr-1 sm:mr-2 h-4 sm:h-5 w-4 sm:w-5 flex-shrink-0" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
          </svg>
          <span class="hidden sm:inline">System</span>
          <span class="inline sm:hidden" aria-hidden="true">System</span>
        </a>
        
        <a 
          href="{{base_path | safe}}/events" 
          aria-label="Events"
          class={`${active == "events" ? 'bg-sky-600/20 text-sky-600 dark:text-sky-300' : 'hover:bg-gray-100 dark:hover:bg-zinc-800/50 text-gray-600 dark:text-zinc-400 hover:text-gray-900 dark:hover:text-zinc-100'} flex items-center px-2 sm:px-4 py-2 text-xs sm:text-sm font-medium transition-all duration-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-sky-500 focus:ring-inset active:scale-95`}>
          <svg class="mr-1 sm:mr-2 h-4 sm:h-5 w-4 sm:w-5 flex-shrink-0" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          <span class="hidden sm:inline">Events</span>
          <span class="inline sm:hidden" aria-hidden="true">Events</span>
        </a>
        
        <a 
          href="{{base_path | safe}}/settings" 
          aria-label="Settings"
          class={`${active == "settings" ? 'bg-sky-600/20 text-sky-600 dark:text-sky-300' : 'hover:bg-gray-100 dark:hover:bg-zinc-800/50 text-gray-600 dark:text-zinc-400 hover:text-gray-900 dark:hover:text-zinc-100'} flex items-center px-2 sm:px-4 py-2 text-xs sm:text-sm font-medium transition-all duration-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-sky-500 focus:ring-inset active:scale-95`}>
          <svg class="mr-1 sm:mr-2 h-4 sm:h-5 w-4 sm:w-5 flex-shrink-0" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
          </svg>
          <span class="hidden sm:inline">Settings</span>
          <span class="inline sm:hidden" aria-hidden="true">Settings</span>
        </a>
      </div>
    </div>
    
    <!-- Theme Toggle Button -->
    <div class="flex-shrink-0">
      <ThemeToggle client:load />
    </div>
  </div>
</nav>

<script>
  // Ensure navbar scroll is properly initialized on mobile devices
  function initNavbarScroll() {
    const scrollContainer = document.getElementById('navbar-scroll-container');
    if (!scrollContainer) return;
    
    // Reset scroll position to start
    scrollContainer.scrollLeft = 0;
    
    // Force browser to recognize overflow state immediately
    // This ensures the scrollbar appears on first render
    if (window.innerWidth <= 640) {
      const isOverflowing = scrollContainer.scrollWidth > scrollContainer.clientWidth;
      if (isOverflowing) {
        // Force multiple reflows to ensure browser properly computes overflow
        void scrollContainer.offsetHeight;
        scrollContainer.style.overflowX = 'auto';
        void scrollContainer.offsetHeight;
        
        // Force scroll position update using requestAnimationFrame for better browser compatibility
        // This ensures layout calculations are complete before applying scroll changes
        requestAnimationFrame(() => {
          scrollContainer.scrollLeft = 0;
          void scrollContainer.offsetHeight;
        });
      }
    }
  }

  // Initialize immediately on script load
  initNavbarScroll();
  
  // Also initialize on DOMContentLoaded if document is still loading
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initNavbarScroll);
  }
  
  // Handle Astro page transitions
  document.addEventListener('astro:page-load', initNavbarScroll);
  
  // Handle window resize with debouncing
  let resizeTimeout: ReturnType<typeof setTimeout>;
  window.addEventListener('resize', () => {
    clearTimeout(resizeTimeout);
    resizeTimeout = setTimeout(initNavbarScroll, 100);
  });
  
  // Force re-initialization on visibility change (handles mobile tab switching)
  document.addEventListener('visibilitychange', () => {
    if (!document.hidden) {
      initNavbarScroll();
    }
  });
</script>
